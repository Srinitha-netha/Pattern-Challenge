#include <stdio.h>
int main() {
    int i,j,n,k;
    printf("Enter the no of rows:");
    scanf("%d",&n);
    // i represents the rows
    for(i=0;i<n;i++) { 
        // j loop prints spaces
        for(j=0;j<n-i;j++) {
            printf(" ");
        }
        for(j=0;j<=i;j++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}

//output for above
Enter the no of rows:5
     * 
    * * 
   * * * 
  * * * * 
 * * * * * 
