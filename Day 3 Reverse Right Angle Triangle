#include <stdio.h>

int main() {
    int i,j,n;
    printf("Enter the no of rows:");
    scanf("%d",&n);
    // i represents the rows
    for(i=n;i>=0;i--) { 
        // j represents the columns
        for(j=0;j<i;j++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}

//output for above

Enter the no of rows:5
* * * * * 
* * * * 
* * * 
* * 
* 
